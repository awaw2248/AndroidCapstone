<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task's title"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:layout_conversion_absoluteHeight="27dp"
                tools:layout_conversion_absoluteWidth="90dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="25dp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="Due"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:layout_conversion_absoluteHeight="77dp"
                tools:layout_conversion_absoluteWidth="136dp"
                tools:layout_editor_absoluteX="275dp"
                tools:layout_editor_absoluteY="0dp" />

            <CheckBox
                android:id="@+id/completion1_checkbox"
                android:layout_width="32dp"
                android:layout_height="29dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:layout_conversion_absoluteHeight="48dp"
                tools:layout_conversion_absoluteWidth="186dp"
                tools:layout_editor_absoluteX="90dp"
                tools:layout_editor_absoluteY="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/creation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="creation date"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.cardview.widget.CardView>